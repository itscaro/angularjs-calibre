{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "library/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "compileOnSave": true,
  "atom": {
      "rewriteTsconfig": true
  }
}
